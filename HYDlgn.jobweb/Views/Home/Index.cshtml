@model HYDlgn.Framework.AppModel.HomeModel
@using HYDlgn.jobweb.Tools
@{
    ViewBag.Title = "Index";
}

<div class="thumbnail-container">
    @foreach (var group in Model.Groups)
    {
        <div class="group-portal" group="@group">
            <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                 width="264px" height="640px" style="position:absolute;"
                 xml:space="preserve">
<g>
<image xlink:href="@Url.Content("~/Content/images/"+group+"_column.png")" width="264px" height="640px"></image>
</g>
</svg>

            @foreach (var link in Model.Links.Where(e => e.LinkGroup == group))
            {

                <div class="thumbnail">
                    <div class="modal-wrapper">
                        <a href="@link.Url">
                            <img src="@Url.Content("~/Content/images/"+ (link.LinkName.Contains("Submission") ? "design_submission.png": (link.LinkName.Contains("Register") ? "job_register.png": "express_permit.png")))" />
                        </a>
                        <span class="span-1 hidden">@link.LinkName</span>
                    </div>



                </div>
            }
        </div>
    }

</div>


@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/my.home.js")"></script>
}


@section styles {
    <link rel="stylesheet" href="@Url.Content("~/Content/home.css")" />
}

